<div class="ml-20 mt-10">
    <div>
        <h1 id="showing"class="text-5xl">Welcome, {{username}}</h1>
    </div>
</div>

<div class="flex flex-row ml-20 mt-10" >
    <div class="flex-auto blog-container w-10 mr-20">
        <h3 class="text-4xl my-8 pl-5">
            Create a Post:
        </h3>
        <form class="new-post-form">
            <div class="mr-10">
                <label class="text-2xl pl-5">Post title:</label>
                <input class="form-input w-full mt-1 pl-2 h-8 text-black ml-5 mb-6 rounded-lg" type="text" id="post-title"/>
            </div>
            <div class="mr-10">
                <label class="text-2xl pl-5">Content:</label>
                <textarea class="form-input w-full mt-1 pl-2 h-8 text-black mx-5 rounded-lg" type="text" id="post-content"/></textarea>
            </div>
            <div class="text-center my-10 ml-10">
                <button type="submit" id="homeButton" class="btn-create text-2xl" style="background-color: #6DB1D8">Create</button>
            </div>
        </form>
    </div>

    {{#if posts.length}}
    <div class=" flex-auto post-list w-64 ml-28 mr-24 ">
        <h3 class="text-4xl mb-8">Current posts:</h3>
        {{#each posts as |post|}}
        <div class="flex flex-row justify-between blog-container mb-5">
            <div>
                <a href="/dashboard/{{post.id}}">
                <h4 class="text-2xl">{{{get_emoji}}} <span id="titles">{{post.title}}</span></h4>
                <p>{{content}}</p>
                </a>
            </div>
            <div>
                <button class="btn-delete"data-id="{{post.id}}">DELETE</button>
            </div>
        </div>
        {{/each}}
    </div>
    {{/if}}
</div>

<script src="/js/dashboard.js"></script>
<script src="/js/logout.js"></script>