<div class="flex flex-row justify-center">
  <div id="login-container" class="blog-container mr-32 px-16">
    <h2 class="text-5xl font-bold mb-10 text-center">Login</h2>

    <form class="form login-form">
      <div class="form-group ">
        <label class="text-2xl" for="email-login">Email:</label>
        <input class="form-input w-full mt-1 pl-2 h-8 text-black rounded-lg" type="text" id="email-login" />
      </div>
      <div class="form-group mt-7">
        <label class="text-2xl" for="password-login">Password:</label>
        <input class="form-input w-full mt-1 pl-2 h-8 text-black rounded-lg" type="password" id="password-login" />
      </div>
      <div class="form-group mt-20 text-center">
        <button class="btn-login text-2xl" id="showing" type="submit" style="background-color:#6DB1D8">Login</button>
      </div>
    </form>
  </div>
  <div id="signup-container" class="blog-container mr-32 px-16">
    <h2 class="text-5xl font-bold mb-10 text-center">Signup</h2>

    <form class="form signup-form">
      <div class="form-group">
        <label class="text-2xl" for="username-signup">Username:</label>
        <input class="form-input w-full mt-1 pl-2 h-8 text-black rounded-lg" type="text" id="username-signup" />
      </div>
      <div class="form-group mt-7">
        <label class="text-2xl" for="email-signup">Email:</label>
        <input class="form-input w-full mt-1 pl-2 h-8 text-black rounded-lg" type="text" id="email-signup" />
      </div>
      <div class="form-group mt-7">
        <label class="text-2xl" for="password-signup">Password:</label>
        <input class="form-input w-full mt-1 pl-2 h-8 text-black rounded-lg" type="password" id="password-signup" />
      </div>
      <div class="form-group my-20 text-center">
        <button id="showing" class="btn-signup text-2xl " type="submit" style="background-color:#6DB1D8">Sign up</button>
      </div>
    </form>
  </div>
</div>

<script src="/js/login.js"></script>